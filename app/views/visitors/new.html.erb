<% content_for :title do %>Course Companion<% end %>
<% content_for :description do %>About Course Companion<% end %>


<div id="myCarousel" class="carousel slide">
  <h3>Course Companion</h3>
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
     	<li data-target="#myCarousel" data-slide-to="2"></li>
   	</ol>
   	<div class="carousel-inner">
   		<div class="item active center">
       		<%= image_tag "adult-learning.jpg" %>
       		<div class="carousel-caption text-center">
         		<h4><%= Visitor::IMAGE_LABELS[0] %></h4>
       		</div>
     	</div>
     	<div class="item">
       		<%= image_tag "own-content.jpg" %>
       		<div class="carousel-caption text-center">
         		<h4><%= Visitor::IMAGE_LABELS[1] %></h4>
       		</div>
     	</div>
     	<div class="item">
       		<%= image_tag "man-with-smartphone.jpg" %>
       		<div class="carousel-caption text-center">
         		<h4><%= Visitor::IMAGE_LABELS[2] %></h4>
       		</div>
     	</div>
   	</div>
   <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
 </div>
 <div align="center">
 	<h5>Set up a trial for your organisation</h5>
 	<div id="modal-form" class="modal" style="display: <%= @visitor.errors.any? ? 'block' : 'none';%>">
 	<%= simple_form_for @visitor do |f| %>
 	<div class="modal-header">
 		<a class="close" data-dismiss="modal">&#215;</a>
 		<h3>Set up a trial</h3>
 	</div>
 	<div class="modal-body">
 	<%= f.error_notification %>
 	<%= f.input :business, label: "Business Name:" %>
  <%= f.input :businesstype, label: "Type of Business:" %>
 	<%= f.input :contactname, label: "Your Name:" %>
 	<%= f.input :email, label: "Your Email:" %>
 	<%= f.input :phone, label: "Your Phone: (Australia only if you'd like us to call)" %>
 	</div>
 	<div class="modal-footer">
 	<%= f.submit "Send Request", :class => "btn btn-primary" %>
 	</div>
 	<% end %>
 </div>
 <div id="call-to-action" align="center">
 	<a class="btn btn-primary btn-large" data-toggle="modal" href="#modal-form">Set up a Trial</a>
 </div>
</div>
